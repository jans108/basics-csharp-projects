@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Symulator Rejestrów</title>

    <!-- Dodaj Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ3QEXjR+I+Jk6o2ndO3sdVnF7f5aFG8Aq0hoODe8Yxpej1QpwD" crossorigin="anonymous">

    <!-- Dodaj własne style (opcjonalnie) -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
        }

        h1 {
            color: #5a5a5a;
            text-align: center;
            font-size: 3rem;
        }

        .container {
            max-width: 800px;
            margin-top: 50px;
        }

        .simulator-box {
            padding: 20px;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
        }

        .results-box {
            padding: 20px;
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            margin-top: 20px; /* Odstęp od przycisku symuluj */
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <!-- Nagłówek z tytułem -->

    <!-- Główna zawartość strony -->
    <div class="container">
        <!-- Symulator -->
        <div class="simulator-box">
            @RenderBody()

        </div>
    </div>

    <!-- Dodaj Bootstrap JS (wraz z Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pzjw8f+ua7Kw1TIq0p5L2RG4huUuZGrkQ6w2G9zXcHv5Efh5VnbL5dS5fn5p8gg7" crossorigin="anonymous">
    </script>

    <!-- Skrypt do walidacji formularzy (opcjonalnie) -->
    @RenderSection("Scripts", required: false)
</body>

</html>
